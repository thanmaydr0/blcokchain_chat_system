# ============================================
# DuoGraph Contracts - Environment Variables
# ============================================
# Copy this file to .env and fill in the values
# NEVER commit the .env file to version control!

# ============================================
# DEPLOYMENT
# ============================================

# Private key for deploying contracts (without 0x prefix is fine)
# Get from MetaMask: Account Details -> Show Private Key
PRIVATE_KEY=your_private_key_here

# Ethereum Sepolia RPC URL
# Options:
# - https://rpc.sepolia.org (public, rate limited)
# - https://eth-sepolia.g.alchemy.com/v2/YOUR_KEY (Alchemy)
# - https://sepolia.infura.io/v3/YOUR_KEY (Infura)
SEPOLIA_RPC=https://rpc.sepolia.org

# ============================================
# VERIFICATION
# ============================================

# Etherscan API key for contract verification
# Get one at: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================
# OPTIONAL
# ============================================

# Enable gas reporting in tests
REPORT_GAS=true
